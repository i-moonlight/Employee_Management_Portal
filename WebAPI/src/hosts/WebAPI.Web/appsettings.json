{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=(local);Initial Catalog=EmployeeDB;Persist Security Info=false;Integrated Security=True;MultipleActiveResultSets=True;"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} [{Level:w5}] {Properties} {SourceContext} [{Level}] {Message}{NewLine}{Exception}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.SystemConsoleTheme::Literate, Serilog.Sinks.Console"
        }
      }
    ],
    "Properties": {
      "Application": "Exploring Serilog"
    }
  },
  "ElasticConfiguration": {
    "Uri": "http://localhost:9200"
  },
  "AllowedHosts": "*",
  "JwtConfig": {
    "Secret": "qwertyuiopasdfghjklzxcvbnm123456",
    "Issuer": "https://localhost:4021;http://localhost:4022",
    "Audience": "https://localhost:5001;http://localhost:5000",
    "TokenLifeTime": "3600"
  }
}
